{
  "manifest_version": 2,
  "name": "YouTube Subtitle Downloader",
  "version": "1.0.0",
  "description": "Download all available subtitles from any YouTube video with a beautiful, modern interface.",
  "author": "RajM012",
  "permissions": [
    "activeTab",
    "http://localhost:5000/*"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "YouTube Subtitle Downloader",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
